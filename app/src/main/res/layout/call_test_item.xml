<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_margin="8dp"
    android:elevation="4dp"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/campaignNameTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:fontFamily="@font/nuntio_bold"
            android:text="Campaign Name -"
            android:padding="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/campaignName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:hint=""
            android:fontFamily="@font/nuntio_regular"
            android:padding="5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/campaignNameTV"/>

        <TextView
            android:id="@+id/themeNameTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Theme Name -"
            android:padding="5dp"
            android:fontFamily="@font/nuntio_bold"
            app:layout_constraintTop_toBottomOf="@+id/campaignNameTV"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/themeName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:hint=""
            android:padding="5dp"
            android:fontFamily="@font/nuntio_regular"
            app:layout_constraintStart_toEndOf="@+id/themeNameTv"
            app:layout_constraintTop_toBottomOf="@+id/campaignName"/>

        <TextView
            android:id="@+id/mobileNoCRTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Mobile No -"
            android:padding="5dp"
            android:fontFamily="@font/nuntio_bold"
            app:layout_constraintTop_toBottomOf="@+id/themeNameTv"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/mobileNoCR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:hint=""
            android:fontFamily="@font/nuntio_regular"
            android:padding="5dp"
            app:layout_constraintStart_toEndOf="@+id/mobileNoCRTv"
            app:layout_constraintTop_toBottomOf="@+id/themeName"/>

        <TextView
            android:id="@+id/callTimeTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Call Time -"
            android:padding="5dp"
            android:fontFamily="@font/nuntio_bold"
            app:layout_constraintTop_toBottomOf="@+id/mobileNoCRTv"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/callTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:hint=""
            android:fontFamily="@font/nuntio_regular"
            android:padding="5dp"
            app:layout_constraintStart_toEndOf="@+id/callTimeTv"
            app:layout_constraintTop_toBottomOf="@+id/mobileNoCR"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>