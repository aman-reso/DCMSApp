<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <!-- we can shift this to RecyclerView but at this point no need -->
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/mainDashboardContainer"
        android:layout_width="match_parent"
        android:layout_height="310dp"
        android:paddingBottom="10dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/container1"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/containerForRegistration"
                android:layout_width="0dp"
                android:layout_height="110dp"
                android:layout_marginHorizontal="8dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/corner_8dp_without_border"
                android:backgroundTint="#ffc277"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/containerForMessageSection"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/imageViewForRegistration"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginHorizontal="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="8dp"
                    android:fontFamily="@font/nuntio_regular"
                    android:textColor="@color/white"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/actionBtnForStartReg"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginBottom="4dp"
                android:background="@drawable/corner_16dp_without_border"
                android:backgroundTint="#9297fe"
                android:elevation="4dp"
                android:fontFamily="@font/nuntio_bold"
                android:paddingHorizontal="8dp"
                android:paddingVertical="12dp"
                android:text="@string/registration"
                android:textAlignment="center"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/containerForRegistration"
                app:layout_constraintStart_toStartOf="@+id/containerForRegistration"
                app:layout_constraintTop_toTopOf="@+id/containerForRegistration"
                app:layout_constraintVertical_bias="1.0" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/containerForMessageSection"
                android:layout_width="0dp"
                android:layout_height="110dp"
                android:layout_marginHorizontal="8dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/corner_8dp_without_border"
                android:backgroundTint="#ff7648"
                app:layout_constraintBottom_toBottomOf="@+id/containerForRegistration"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/containerForRegistration"
                app:layout_constraintTop_toTopOf="@+id/containerForRegistration">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginHorizontal="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="8dp"
                    android:fontFamily="@font/nuntio_regular"
                    android:src="@drawable/ic_icons8_whatsapp"
                    android:textColor="@color/white"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/messageMainAction"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginBottom="4dp"
                android:background="@drawable/corner_16dp_without_border"
                android:backgroundTint="#edf8e1"
                android:elevation="4dp"
                android:fontFamily="@font/nuntio_bold"
                android:paddingVertical="12dp"
                android:text="@string/send_whatsapp"
                android:textAlignment="center"
                android:textColor="@color/black"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/containerForMessageSection"
                app:layout_constraintStart_toStartOf="@+id/containerForMessageSection"
                app:layout_constraintTop_toTopOf="@+id/containerForMessageSection"
                app:layout_constraintVertical_bias="1.0" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/container2"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/container1">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/containerForTextMessage"
                android:layout_width="0dp"
                android:layout_height="110dp"
                android:layout_marginHorizontal="8dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/corner_8dp_without_border"
                android:backgroundTint="#C2EA94"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/containerForStartSurvey"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginHorizontal="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="8dp"
                    android:fontFamily="@font/nuntio_regular"
                    android:src="@drawable/ic_message_paper_plane_svgrepo_com"
                    android:textColor="@color/white"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/textMessageAction"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginBottom="4dp"
                android:background="@drawable/corner_16dp_without_border"
                android:backgroundTint="#345"
                android:elevation="4dp"
                android:fontFamily="@font/nuntio_bold"
                android:paddingHorizontal="8dp"
                android:paddingVertical="12dp"
                android:text="@string/text_message"
                android:textAlignment="center"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@id/containerForTextMessage"
                app:layout_constraintStart_toStartOf="@id/containerForTextMessage"
                app:layout_constraintTop_toTopOf="@id/containerForTextMessage"
                app:layout_constraintVertical_bias="1.0" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/containerForStartSurvey"
                android:layout_width="0dp"
                android:layout_height="110dp"
                android:layout_marginHorizontal="8dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/corner_8dp_without_border"
                android:backgroundTint="#9297FF"
                app:layout_constraintBottom_toBottomOf="@id/containerForTextMessage"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/containerForTextMessage"
                app:layout_constraintTop_toTopOf="@id/containerForTextMessage">

                <ImageView
                    android:id="@+id/imageViewForStartSurvey"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginHorizontal="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="8dp"
                    android:fontFamily="@font/nuntio_regular"
                    android:textColor="@color/white"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/actionBtnForStartSurvey"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginBottom="4dp"
                android:background="@drawable/corner_16dp_without_border"
                android:backgroundTint="#666"
                android:elevation="4dp"
                android:fontFamily="@font/nuntio_bold"
                android:paddingVertical="12dp"
                android:text="@string/attempt"
                android:textAlignment="center"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@id/containerForStartSurvey"
                app:layout_constraintStart_toStartOf="@id/containerForStartSurvey"
                app:layout_constraintTop_toTopOf="@id/containerForStartSurvey"
                app:layout_constraintVertical_bias="1.0" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>