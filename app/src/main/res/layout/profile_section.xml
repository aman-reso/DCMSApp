<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/profileSectionContainer"
        android:orientation="vertical"
        android:paddingHorizontal="16dp">

        <TextView
            android:id="@+id/profileSectionTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nuntio_bold"
            android:text="Profile"
            android:textColor="#232323"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/profileNameTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/nuntio_regular"
            android:text="Aman Kumar"
            android:textColor="#232323"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/profileContactNumTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/nuntio_regular"
            android:text="+91 91117"
            android:textSize="16sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:id="@+id/logoutSection"
            android:drawableEnd="@drawable/ic_baseline_exit_to_app_24"
            android:text="Log out"
            android:textSize="14sp" />

    </LinearLayout>
</layout>