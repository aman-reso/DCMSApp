<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:elevation="5dp">

    <data>

    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                tools:context=".codes.HomeLandingMainActivity">

                <include
                    android:id="@+id/containerAppBar"
                    layout="@layout/app_title_bar" />

                <com.skydoves.powerspinner.PowerSpinnerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#E4E4E4"
                    android:gravity="start"
                    android:id="@+id/campaignPowerSpinner"
                    android:hint="Select a Campaign"
                    android:padding="10dp"
                    android:textColor="@color/black"
                    android:textColorHint="#666"
                    android:fontFamily="@font/nuntio_regular"
                    android:textSize="14.5sp"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginVertical="8dp"
                    app:spinner_arrow_gravity="end"
                    app:spinner_arrow_animate_duration="200"
                    app:spinner_arrow_tint="@color/black"
                    app:spinner_arrow_drawable="@drawable/ic_outline_keyboard_arrow_down_24"
                    app:spinner_arrow_padding="8dp"
                    app:spinner_arrow_show="true"
                    app:spinner_arrow_animate="true"
                    app:spinner_divider_color="@color/black"
                    app:spinner_divider_show="true"
                    app:spinner_divider_size="0.4dp"
                    app:spinner_item_height="46dp"
                    app:spinner_popup_animation="dropdown"
                    app:spinner_popup_background="#EFEFEF"
                    app:spinner_popup_elevation="14dp"/>
                <TextView
                    android:id="@+id/instructionTitleTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="@font/nuntio_regular"
                    android:text="@string/instruction_for_you"
                    android:textColor="#272b29"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/instructionDetailTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="16dp"
                    android:fontFamily="@font/nuntio_regular"
                    android:text="@string/here_is_the_instruction_please_go_through_this_first"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toTopOf="@+id/textView"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/instructionTitleTextView"
                    app:layout_constraintTop_toBottomOf="@+id/instructionTitleTextView" />


                <include
                    android:id="@+id/mainDashboardContainer"
                    layout="@layout/layput_home_dashboard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView" />


            </LinearLayout>

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>

</layout>