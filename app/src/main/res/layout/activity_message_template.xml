<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".codes.activity.MessageTemplateActivity">

        <include
            android:id="@+id/containerAppBar"
            layout="@layout/app_title_bar" />

        <TextView
            android:id="@+id/MessageTemplateTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16sp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/nuntio_bold"
            android:hint="Today's Message"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/containerAppBar" />

        <TextView
            android:id="@+id/messageTemplateDescTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16sp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/MessageTemplateTV"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/sentToTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16sp"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/nuntio_bold"
            android:text="Sent to"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/MessageTemplateTV" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/contactsRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="16sp"
            android:layout_marginTop="8dp"
            android:orientation="vertical"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sentToTV"
            app:layout_constraintBottom_toTopOf="@id/sendToWaGroupBtn"/>

        <Button
            android:id="@+id/sendToWaGroupBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_margin="15dp"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:backgroundTint="@color/purple_500"
            android:text="Send to Group"/>

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="24dp"
            android:visibility="gone"
            android:layout_height="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>